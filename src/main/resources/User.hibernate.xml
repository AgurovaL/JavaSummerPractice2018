<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.agurova.models.User" table="customers">
        <id name="userId" type="long" column="id">
            <generator class="identity" />
        </id>
        <property name="name" column="name" type="string"/>
        <property name="login" column="login" type="string"/>
        <property name="password" column="password" type="string"/>

        <set name="images" table="favorite_image" lazy="false" cascade="save-update">
            <key column="user_id" not-null="true"/>
            <many-to-many column="image_id" class="com.agurova.models.Image"/>
        </set>

    </class>
</hibernate-mapping>
