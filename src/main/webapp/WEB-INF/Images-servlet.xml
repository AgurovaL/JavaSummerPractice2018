<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:context = "http://www.springframework.org/schema/context"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:component-scan base-package = "com.agurova" />

    <bean class = "org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name = "prefix" value = "/WEB-INF/views/" />
        <property name = "suffix" value = ".jsp" />
    </bean>

    <bean id="imageController" class="com.agurova.controllers.ImageController">
        <property name="service" ref="mainService"/>
    </bean>

    <bean id="mainService" class="com.agurova.services.impl.ImageMainServiceImpl">
        <property name="imageRepositoryService" ref="imageRepositoryService"/>
        <property name="stockImagesService" ref="stockImagesService"/>
    </bean>

    <bean id="imageRepositoryService" class="com.agurova.services.impl.ImageRepositoryServiceImpl">
        <property name="imageRepository" ref="imageRepository"/>
    </bean>

    <bean id="stockImagesService" class="com.agurova.services.impl.UnsplashStockImageServiceImpl">
    </bean>

    <bean id="imageRepository" class="com.agurova.dal.impl.ImageRepositoryImpl">
    </bean>
</beans>