<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:context = "http://www.springframework.org/schema/context"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:component-scan base-package = "com.agurova" />

    <bean class = "org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name = "prefix" value = "/WEB-INF/views/" />
        <property name = "suffix" value = ".jsp" />
    </bean>

    <bean id="appController" class="com.agurova.controllers.AppController">
        <property name="service" ref="mainUserService"/>
    </bean>

    <bean id="imageController" class="com.agurova.controllers.ImageController">
        <property name="service" ref="mainImageService"/>
        <property name="userRepositoryService" ref="userRepositoryService"/>
    </bean>

    <bean id="userController" class="com.agurova.controllers.UserController">
        <property name="service" ref="mainUserService"/>
    </bean>

    <bean id="mainImageService" class="com.agurova.services.image.helper.impl.ImageMainServiceImpl">
        <property name="imageRepositoryService" ref="imageRepositoryService"/>
        <property name="stockImagesService" ref="stockImagesService"/>
    </bean>

    <bean id="mainUserService" class="com.agurova.services.user.helper.impl.UserMainServiceImpl">
        <property name="userRepositoryService" ref="userRepositoryService"/>
    </bean>

    <bean id="imageRepositoryService" class="com.agurova.services.image.dal.impl.ImageRepositoryServiceImpl">
        <property name="imageRepository" ref="imageRepository"/>
    </bean>

    <bean id="userRepositoryService" class="com.agurova.services.user.dal.impl.UserRepositoryServiceImpl">
        <property name="userRepository" ref="userRepository"/>
    </bean>

    <bean id="stockImagesService" class="com.agurova.services.image.external.impl.UnsplashStockImageServiceImpl">
    </bean>

    <bean id="userRepository" class ="com.agurova.dal.impl.UserRepositoryImpl">
    </bean>

    <bean id="imageRepository" class ="com.agurova.dal.impl.ImageRepositoryImpl">
    </bean>

    <bean id="logger" class="org.apache.log4j.Logger" factory-method="getLogger">
        <constructor-arg type="java.lang.String" value="my.Logger" />
    </bean>

</beans>