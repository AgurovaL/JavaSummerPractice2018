<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean id="imageController" class="com.agurova.controllers.ImageController">
        <property name="service" ref="mainService"/>
    </bean>

    <bean id="mainService" class="com.agurova.services.helper.impl.ImageMainServiceImpl">
        <property name="imageRepositoryService" ref="imageRepositoryService"/>
        <property name="stockImagesService" ref="stockImagesService"/>
    </bean>

    <bean id="imageRepositoryService" class="com.agurova.services.dal.impl.ImageRepositoryServiceImpl">
        <property name="imageRepository" ref="imageRepository"/>
    </bean>

    <bean id="stockImagesService" class="com.agurova.services.external.impl.UnsplashStockImageServiceImpl">
    </bean>

    <bean id="user" class="com.agurova.agurova.models.User">
        <property name="image" ref="image"/>
    </bean>

    <bean id="image" class ="com.agurova.agurova.models.Image">
        <property name="user" ref="user"/>
    </bean>

    <bean id="userRepository" class ="com.agurova.dal.impl.UserRepositoryImpl">
    </bean>

    <bean id="imageRepository" class ="com.agurova.dal.impl.ImageRepositoryImpl">
    </bean>

    <bean id="logger" class="org.apache.log4j.Logger" factory-method="getLogger">
        <constructor-arg type="java.lang.String" value="my.Logger" />
    </bean>

</beans>